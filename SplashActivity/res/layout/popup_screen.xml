<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/linearlayout_bg"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
        android:id="@+id/ravetype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ravetitle"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ravedes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="descrption"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/raveperson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="person"
        android:textColor="#ffffff"
        android:textStyle="italic" />

    <LinearLayout
        android:id="@+id/btns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#01A9DB"
        android:gravity="center|bottom"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/send_thank"
            android:layout_width="75dp"
            android:layout_height="35dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/border_button_bg"
            android:text="Send Thank"
            android:textColor="#ffffff"
            android:textSize="12sp" />

        <Button
            android:id="@+id/close"
            android:layout_width="75dp"
            android:layout_height="35dp"
            android:layout_marginLeft="4dp"
            android:background="@drawable/border_button_bg"
            android:text="Close"
            android:textColor="#ffffff"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>